<%- include('partials/_header') %>

<body>

  <%- include('partials/_navigation') %>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <h2><%= blog.title %></h2>
          <p><%= blog.message %></p>
          <p>post created at : <%= blog.dateCreated %></p>
          <a href="/blogs/edit/<%= blog._id %>" style="background-color: rgb(73, 73, 73); padding: 9px; color: white; font-family: 'Trebuchet MS'; font-size: 16px; border-radius: 4px;">Edit post</a>
          <a href="/blogs/<%= blog._id %>?_method=DELETE" style = "background-color:red; color:white; font-family: 'Trebuchet MS'; padding: 9px; border-radius: 4px; font-size: 16px;"
            onclick="return confirm('Are you sure you want to delete this post?')">Delete Post amk</a>
        </div>
      </div>
    </div>
  </article>

  <hr>

<%- include('partials/_footer') %>
</body>

</html>
